<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/arrive"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="#0078D7"
            android:drawablePadding="13sp"
            android:drawableTop="@drawable/daka"
            android:padding="20sp"
            android:text="考勤打卡"
            android:textColor="#fff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/cant_arr"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="#0078D7"
            android:drawablePadding="13sp"
            android:drawableTop="@drawable/qingjia"
            android:padding="20sp"
            android:text="请假"
            android:textColor="#fff"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/history"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="#0078D7"
            android:drawablePadding="13sp"
            android:drawableTop="@drawable/jilu"
            android:padding="20sp"
            android:text="考勤记录"
            android:textColor="#fff"
            android:textSize="20sp"
            tools:ignore="InvalidId" />
        />

        <Button
            android:id="@+id/face_regist"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="#0078D7"
            android:drawablePadding="13sp"
            android:drawableTop="@drawable/renlian_zhuce"
            android:padding="20sp"
            android:text="人脸注册"
            android:textColor="#fff"
            android:textSize="20sp" />
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/personal_info"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="#0078D7"
            android:drawablePadding="13sp"
            android:drawableTop="@drawable/personal_information"
            android:padding="20sp"
            android:text="个人信息"
            android:textColor="#fff"
            android:textSize="20sp"
            tools:ignore="InvalidId" />
        />

        <!--占位，不可见-->
        <Button
            android:id="@+id/face_regis"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_margin="5sp"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_weight="1"
            android:background="#0078D7"
            android:drawablePadding="13sp"
            android:drawableTop="@drawable/renlian_zhuce"
            android:padding="20sp"
            android:text="人脸注册"
            android:textColor="#fff"
            android:textSize="20sp"
            android:visibility="invisible"/>
        />
    </LinearLayout>

</LinearLayout>